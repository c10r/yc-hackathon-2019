{
  "name": "Credz.io Browser Extension",
  "description": "Rewarding great ideas via microtransactions. Support content you love.",
  "version": "1.3",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon5.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "https://js.stripe.com/",
    "https://us-central1-credz-io.cloudfunctions.net/"
  ],
  "content_security_policy": "script-src 'self' https://js.stripe.com; object-src 'self'",
  "manifest_version": 2
}
